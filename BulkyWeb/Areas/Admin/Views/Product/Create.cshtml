@model BulkyWeb.Models.ProductVM

<h2 class="h2 text-white"> New Product</h2>

<form class="form-control form-group" asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-row d-flex">
        <div class="col-md-4 ps-2">
            
            <input asp-for="product.Title" class="form-control" placeholder="Title"/>
            <span asp-validation-for="product.Title"></span>
        </div>
        <div class="col-md-4 ps-2">
     
            <input asp-for="product.Author" class="form-control" placeholder="Author" />
            <span asp-validation-for="product.Author"></span>
        </div>
        <div class="col-md-4 ps-2">
            
            <input asp-for="product.ISBN" class="form-control" placeholder="ISBN" />
            <span asp-validation-for="product.ISBN"></span>
        </div>

    </div>

    <input asp-for="product.Description" class="form-control pt-4" placeholder="Description">
    <span asp-validation-for="product.Description"></span>

    <div class="form-row d-flex pt-2 pb-2">
        <div class="col-md-3 ps-2">

            <input asp-for="product.ListPrice" class="form-control" placeholder="List Price" />
            <span asp-validation-for="product.ListPrice"></span>
        </div>
        <div class="col-md-3 ps-2">

            <input asp-for="product.Price" class="form-control" placeholder="Price for 1-50" />
            <span asp-validation-for="product.Price"></span>
        </div>
        <div class="col-md-3 ps-2">

            <input asp-for="product.Price50" class="form-control" placeholder="Price for 50-100" />
            <span asp-validation-for="  product.Price50"></span>
        </div>
        <div class="col-md-3 ps-2">

            <input asp-for="product.Price100" class="form-control" placeholder="Price for 100+" />
            <span asp-validation-for="product.Price100"></span>
        </div>


    </div>
   <div class="form-row d-flex">
        <div class="form-floating py-2 col-6">

            <select asp-for="product.CategoryId" asp-items="@Model.CategoryList" class="form-select shadow">
                <option disabled selected>--Select Category--</option>
            </select>

            <span asp-validation-for="product.CategoryId"></span>
        </div>

        <div class=" py-2 col-6">

            <input type="file" name="formFile" asp-for="product.imageUrl" class="form-control" placeholder="image url" />
          

            </div>

   </div>

 
        <div class="row">
        <div class=" col-6">
            <input class="btn btn-outline-dark form-control" type="submit" value="Submit" />

        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back</a> 

        </div>
        </div>


  

     

</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }