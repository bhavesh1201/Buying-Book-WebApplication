@model BulkyWeb.Models.Category



<form method="post">


    <input asp-for="Id" hidden />
    <div class="border p-3 mt-2">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Category
            </h2> <hr />

        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3 row p-1">
            <label> Name</label>
            <input asp-for="Name" class="form-control"  disabled />
         
        </div>


        <div class="mb-3 row p-1">
            <label> Display Order</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            

        </div>


        <div class="row">
            <div class="col-6 col-md-3">

                <input type="submit" class="btn btn-danger form-control" value="Delete" />


            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back
                </a>
            </div>


        </div>

    </div>



</form>


